<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="trinidad.daniel.bioxotic.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="trinidad.daniel.bioxotic.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/favorites_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="trinidad.daniel.bioxotic.ui.notifications.NotificationsFragment"
        android:label="Measurements"
        tools:layout="@layout/calculate_size_fragment" />

    <fragment
        android:id="@+id/navigation_contact"
        android:name="trinidad.daniel.bioxotic.ui.contact.ContactFragment"
        android:label="Contacts"
        tools:layout="@layout/activity_hospital_contacts" />

    <fragment
        android:id="@+id/navigation_global_chat"
        android:name="trinidad.daniel.bioxotic.ui.global_chat.Global_chat_Fragment"
        android:label="@string/title_global_chat"
        tools:layout="@layout/activity_global_chat"/>
</navigation>