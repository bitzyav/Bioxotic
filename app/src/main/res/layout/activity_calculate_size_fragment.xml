<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.calculate_size.CalculateSizeFragment"
    android:orientation="vertical"
    android:background="@color/gray_background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp">

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/back36"
            android:layout_gravity="left"
            android:background="@null"/>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:background="@drawable/bioxotic"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/profile_btn36" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/measurement"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@color/green"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/measurements_description"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:textColor="@color/white"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/round_edit_text"
        android:gravity="center"
        android:hint="Username"
        android:textSize="18sp"
        android:inputType="text"
        />


    <Button
        android:id="@+id/btn_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:background="@drawable/round_button"
        android:layout_gravity="center"
        style="@style/AppTheme.Button"/>

    <TextView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dimensions"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@drawable/round_layout_line"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/height"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_medium"
                />

            <TextView
                android:id="@+id/tv_height"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0 cm"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/layout_line">

            <TextView
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/length"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_medium"
                />

            <TextView
                android:id="@+id/tv_length"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.0 cm"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/width"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/width"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_medium"
                />

            <TextView
                android:id="@+id/tv_width"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/width"
                android:text="0.0 cm"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/montserrat_bold"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>